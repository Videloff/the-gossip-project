<!DOCTYPE html>
<html>
  <body class="bk_show">
    <center>
      <br>
      <div class="card border-secondary mb-3" style="max-width: 900px; opacity: 75%">
        <div class="card-header h3">Création de votre compte :</div>
          <div class="card-body">
            <%= form_for @user, url: users_path, method: :post do %>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
              <br>
                <%= text_field_tag :first_name, nil, placeholder: "Votre prénom", size: 40 %>
              <br><br>
                <%= text_field_tag :last_name, nil, placeholder: "Votre nom", size: 40 %>
              <br><br>
                <%= text_field_tag :email, nil, placeholder: "Votre email", size: 40 %>
              <br><br>
                <%= text_field_tag :age, nil, placeholder: "age", size: 40 %>
              <br><br>
                <%= text_area_tag :description, nil, placeholder: "Votre description", rows: 3, cols: 42  %>
              <br><br>
                <%= password_field_tag :password, nil, placeholder: "Mot de passe", size: 40 %>
              <br><br>
                <%= password_field_tag :password_confirmation, nil, placeholder: "Vérification du mot de passe", size: 40 %>
              <br><br>
                <%= submit_tag "Valider la création du compte", class: "button btn btn-outline-info btn-dark", method: :post %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </center>
  </body>
</html>